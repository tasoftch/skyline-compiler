{
  "name": "skyline/compiler",
  "license": "BSD-3-Clause",
  "description": "The compiler package allows you to manually edit the source files and compile them to a bootable structure, so any Skyline Application is able to boot from that compilation.",
  "authors": [
    {
      "name": "Thomas Abplanalp",
      "email": "info@tasoft.ch"
    }
  ],
  "autoload": {
    "psr-4": {
      "Skyline\\Compiler\\" : "src"
    }
  },
  "require" : {
    "php": "^8",
    "ext-libxml": "*",
    "ext-simplexml": "*",
    "ext-json": "*",
    "tasoft/service-manager": "^2.2",
    "tasoft/config": "^8",
    "tasoft/tools-path": "^1.5",
    "skyline/kernel": "^0.9",
    "symfony/filesystem": "^6"
  },
  "require-dev": {
    "phpunit/phpunit": "^9"
  }
}
